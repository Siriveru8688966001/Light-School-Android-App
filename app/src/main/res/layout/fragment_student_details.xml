<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".studentDetails"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TODO: Update blank fragment layout -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:gravity="center"
                android:background="#50A2C6"
                >
                <TextView
                    android:id="@+id/light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Light Class Room"
                    android:padding="20dp"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/light"
                    android:layout_marginTop="-45dp"
                    android:layout_marginLeft="150dp"
                    android:padding="10dp"
                    android:text="Profile"
                    android:textColor="#D4DBDC"

                    android:textSize="20dp"
                    android:textStyle="bold" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_notifications_active_24"
                    android:backgroundTint="#ECE8E8"

                    android:layout_marginLeft="370dp"
                    android:layout_marginTop="70dp"/>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/photos"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="92dp"
                android:background="@color/white"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/card01"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    app:cardBackgroundColor="#50A2C6"
                    tools:ignore="MissingConstraints"

                    app:cardElevation="30dp"
                    android:outlineSpotShadowColor="#150A0A">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="150dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/student"/>

                    </androidx.cardview.widget.CardView>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    app:cardBackgroundColor="#50A2C6"
                    tools:ignore="MissingConstraints"

                    app:cardElevation="30dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="150dp"
                        android:layout_margin="2dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/student" />
                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/photos"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="0dp"
                    android:text="IAS"
                    android:textColor="#068DC8"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="#068DC8"
                    android:textSize="15dp"
                    android:layout_marginLeft="62dp"
                    android:layout_marginTop="0dp"
                    android:text="Doctor"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/name_of_the_profile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/designation"
                android:orientation="horizontal"
                android:background="#63DFD6D6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="4dp"
                    android:text="Mukil Srini M"
                    android:textColor="#0C0C0C"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="4dp"
                    android:text="Grade 4"
                    android:textColor="#0C0C0C"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:padding="5dp"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/name_of_the_profile"
                android:orientation="vertical">
                <Button
                    android:id="@+id/createProfile_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="  Create Profile"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/baseline_file_copy_24"
                    android:visibility="visible"

                    />
                <Button
                    android:id="@+id/btn_display"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="  View Profile"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/baseline_file_copy_24"
                    android:visibility="visible"

                    />
                <Button
                    android:id="@+id/btn_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="   Attendance Report"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/baseline_directions_boat_filled_24"
                    android:layout_below="@+id/btn_profile"

                    />

                <Button
                    android:id="@+id/btn_bookMarks"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="  Bookmarks"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/baseline_bookmarks_24"
                    android:layout_below="@+id/btn_attendance"

                    />
                <Button
                    android:id="@+id/btn_studyMaterial"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="  Study Materials"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/baseline_bookmarks_24"
                    android:layout_below="@+id/btn_bookMarks"

                    />
                <Button
                    android:id="@+id/btn_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="  Feedback"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/baseline_feedback_24"
                    android:layout_below="@+id/btn_studyMaterial"

                    />
                <Button
                    android:id="@+id/btn_quires"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="  Quires"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/baseline_insert_drive_file_24"
                    android:layout_below="@+id/btn_feedback"

                    />
                <Button
                    android:id="@+id/btn_fee"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="  Fee Structure"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/baseline_fax_24"
                    android:layout_below="@+id/btn_quires"

                    />
                <Button
                    android:id="@+id/btn_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="  Privacy Policy"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/baseline_privacy_tip_24"
                    android:layout_below="@+id/btn_fee"

                    />
                <Button
                    android:id="@+id/btn_contact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="  Contact Us"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/baseline_contact_phone_24"
                    android:layout_below="@+id/btn_privacy"

                    />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>