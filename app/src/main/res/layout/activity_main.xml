<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/frame_layout"
        android:layout_height="match_parent"
        android:layout_above="@+id/foot"
        android:background="@color/white">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">
                        <Button
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="New"
                            android:layout_margin="15dp"
                            android:padding="10dp"
                            android:background="@color/purple_500"/>

                        <Button
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:backgroundTint="@color/design_default_color_on_primary"
                            android:text="Independence Day"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:background="@color/purple_500"/>

                        <Button
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Photos"
                            android:layout_margin="15dp"
                            android:textColor="@color/black"
                            android:backgroundTint="@color/design_default_color_on_primary"/>

                        <Button
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Sports"
                            android:layout_margin="15dp"
                            android:textColor="@color/black"
                            android:backgroundTint="@color/design_default_color_on_primary"/>

                    </LinearLayout>
                </HorizontalScrollView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Recent Circular"
                        android:layout_margin="1dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:background="@color/white"/>


                    <androidx.cardview.widget.CardView
                        android:layout_width="400dp"
                        android:layout_height="112dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:layout_margin="15dp"

                        android:padding="20dp"
                        app:cardElevation="30dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="112dp"
                            android:padding="15dp"
                            android:background="@color/white"

                            android:text="@string/parents_info"
                            android:textColor="@color/black"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Independence Day"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_margin="15dp"
                        android:background="@color/white"/>


                    <androidx.cardview.widget.CardView
                        android:layout_width="400dp"
                        android:layout_height="270dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"

                            android:background="@color/white"
                            >
                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="210dp"
                                android:background="@drawable/independance01"

                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="0dp"


                                />

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="210dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginRight="0dp"
                                android:background="@drawable/independence02" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Technology"
                        android:textColor="@color/black"
                        android:layout_margin="15dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="400dp"
                        android:layout_height="400dp"
                        app:cardElevation="50dp"

                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/white">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Its Easy to save Whatsapp Status"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:layout_marginLeft="10dp"
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:layout_marginTop="20dp"/>
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/whatsapp"
                                android:layout_marginLeft="-90dp"
                                android:layout_marginTop="10dp"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/Whatsapp_data"
                            android:layout_marginTop="100dp"
                            android:textColor="@color/black"
                            android:padding="15dp"/>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="400dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"

                        android:layout_margin="15dp"

                        android:padding="20dp"
                        app:cardElevation="30dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Welcoming the new ideas"
                            android:textColor="@color/black"
                            android:textStyle="bold"


                            android:layout_margin="10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/white">

                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="match_parent"

                                android:text="@string/new_idea"
                                android:textColor="@color/black"
                                android:layout_marginTop="40dp"
                                android:layout_marginLeft="10dp"/>
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="130dp"
                                android:background="@drawable/bulb"
                                android:layout_marginLeft="-10dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="400dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"

                        android:layout_margin="15dp"

                        android:padding="20dp"
                        app:cardElevation="30dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Welcoming the new ideas"
                            android:textColor="@color/black"
                            android:textStyle="bold"


                            android:layout_margin="10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/white">

                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="match_parent"

                                android:text="@string/new_idea"
                                android:textColor="@color/black"
                                android:layout_marginTop="40dp"
                                android:layout_marginLeft="10dp"/>
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="130dp"
                                android:background="@drawable/bulb"
                                android:layout_marginLeft="-10dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="400dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"

                        android:layout_margin="15dp"

                        android:padding="20dp"
                        app:cardElevation="30dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Welcoming the new ideas"
                            android:textColor="@color/black"
                            android:textStyle="bold"


                            android:layout_margin="10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/white">

                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="match_parent"

                                android:text="@string/new_idea"
                                android:textColor="@color/black"
                                android:layout_marginTop="40dp"
                                android:layout_marginLeft="10dp"/>
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="130dp"
                                android:background="@drawable/bulb"
                                android:layout_marginLeft="-10dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>





                </LinearLayout>

            </LinearLayout>

        </ScrollView>







</FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu01"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"/>

</RelativeLayout>